                var full_selector = "[data-ise-test-execution-id='"+temp+"']";
                $(full_selector).parents('tr').hide();
              } //end of for loops
            }//end of if(ok)
          }//end of success function
        });//end of ajax call
        //console.log(execution_id_list);
        //console.log(section_body_id);
        //console.log('there');

